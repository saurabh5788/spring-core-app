<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
   http://www.springframework.org/schema/beans/spring-beans.xsd">
	<bean name="computer" class="com.beans.LenovoComputer">
		<constructor-arg ref="microprocessor" />
		<!--<constructor-arg> <ref bean="microprocessor " /> </constructor-arg> -->

	</bean>
	<bean name="microprocessor" class="com.beans.MotorolaMicroprocessor">
		<constructor-arg name="m" value="2" />
		<constructor-arg name="n" value="1024" />
		<!-- <constructor-arg> <value>2</value> </constructor-arg> -->
	</bean>
</beans>
